{
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["**/build", "**/node_modules", "docs/export"],
  "compilerOptions": {
    "types": ["node", "react"],
    "module": "esnext",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "strict": true,
    "paths": {
      "batchui": ["./src"]
    }
  }
}
